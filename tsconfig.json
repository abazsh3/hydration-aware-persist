{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/lib/components/*"],
      "@enums/*": ["src/lib/enums/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/lib/enums/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/dist",
    "**/.storybook",
    "**/storybook-static",
    "**/generators",
    "**/test.*",
    "node_modules",
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
